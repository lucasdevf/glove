generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CreditCard {
  id String @id @default(cuid())

  number      String
  holder_name String
  validity    DateTime
  cvv         Int
  user_id     String

  archived Boolean @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("credit_cards")
}
